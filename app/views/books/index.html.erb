<p id="notice"><%= notice %></p>

<h1>Smart Phone</h1>

<table>
  <thead>
    <tr>
      <!-- <th>Title</th> -->
      <th>Id</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Color</th>
      <th>Quantity</th>
      <th>Id_producer</th>
      <!-- <th>Number of pages</th> -->
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <!-- <td><%= book.title %></td>
        <td><%= book.number_of_pages %></td> -->
        <%= book.id %>
        <%= book.name %>
        <%= book.description %>
        <%= book.price %>
        <%= book.color %>
        <%= book.quantity %>
        <%= book.id_producer %>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Smart Phone', new_book_path %>
